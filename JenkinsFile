pipeline{
    agent any
    stages{
        stage("checkout"){
            steps{
                sh 'echo passed'
        //git branch: 'main', url: 'https://github.com/ShikhaaSharmaa45/project2.git'
            }
        }
        stage('Build and Push Docker Image') {
      environment {
        DOCKER_IMAGE = "shikha1818/dockerimage:${BUILD_NUMBER}"
        // DOCKERFILE_LOCATION = "Dockerfile"
        REGISTRY_CREDENTIALS = credentials('shikha1818')
      }
      steps {
        script {
            sh 'docker build -t ${DOCKER_IMAGE} .'
            sh 'docker login -u shikha1818 -p shikha18nov '
            sh 'docker image push ${DOCKER_IMAGE}'

        }
      }

}
stage("Deployment"){
            steps{
                sshagent(['dockerhost']){
                      def docker = "docker container run -itd -p 7000:80 ${DOCKER_IMAGE}"
                   // some block 
                    sh "ssh -o StrictHostKeyChecking=no ec2-user@172.31.31.206 ${docker}"
                  } 
            }
        }
    }
}
